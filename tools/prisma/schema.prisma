generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PricingMatrix {
  id         Int     @id @default(autoincrement())
  minCost    Float
  maxCost    Float
  multiplier Float
  userId     Int     @default(1)
  user       User    @relation(fields: [userId], references: [id])
}

model Rule {
  id       Int     @id @default(autoincrement())
  name     String  // Removed unique constraint as multiple users can have same rule name
  value    Float
  type     String  @default("PERCENTAGE_ADD")
  isActive Boolean @default(true)
  userId   Int     @default(1)
  user     User    @relation(fields: [userId], references: [id])
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String?
  rules         Rule[]
  pricingMatrix PricingMatrix[]
}

model Product {
  id         Int     @id @default(autoincrement())
  sku        String  @unique
  price      Float
  vendorId   Int     @default(1)
  vendorName String  @default("chesapeake")
  name       String  @default("")
}
